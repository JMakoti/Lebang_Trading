  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Honeycomb Grid Layout In Pure CSS</title>

    <style>
      @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800&display=swap");

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      body {
        font-family: "Poppins", sans-serif;
        background: #111111;
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: "Poppins", sans-serif;
        background: #111;
      }

      /* --- HONEYCOMB GRID WRAPPER --- */
      .honeycomb {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 80px;
        gap: 10px;
      }

      /* --- EACH ROW IN THE HONEYCOMB --- */
      .honey-row {
        display: flex;
        justify-content: center;
        gap: 10px;
      }

      /* SHIFT THE MIDDLE ROW LEFT TO INTERLOCK */
      .honey-row.middle {
        transform: translateX(-75px);
      }

      /* SHIFT LAST ROW RIGHT TO INTERLOCK PERFECTLY */
      .honey-row.last {
        transform: translateX(-150px);
      }

      /* --- HEXAGON CELL --- */
      .honeycomb-cell {
        width: 150px;
        height: 170px;
        position: relative;
        text-align: center;
        cursor: pointer;
      }

      .honeycomb-cell::before {
        content: "";
        position: absolute;
        width: 100%;
        height: 100%;
        clip-path: polygon(
          50% 0%,
          100% 25%,
          100% 75%,
          50% 100%,
          0% 75%,
          0% 25%
        );
        background: #ffffff;
        transition: 0.3s;
        z-index: -2;
      }

      .honeycomb-cell::after {
        content: "";
        position: absolute;
        width: 100%;
        height: 100%;
        clip-path: polygon(
          50% 0%,
          100% 25%,
          100% 75%,
          50% 100%,
          0% 75%,
          0% 25%
        );
        background: #00000055;
        transition: 0.3s;
        z-index: -1;
      }

      .honeycomb-cell:hover::before {
        background: #fc5130;
      }

      .honeycomb-cell:hover::after {
        background: transparent;
      }

      /* IMAGE IN THE HEX */
      .honeycomb-cell img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        clip-path: polygon(
          50% 0%,
          100% 25%,
          100% 75%,
          50% 100%,
          0% 75%,
          0% 25%
        );
        filter: grayscale(100%);
        transition: 0.3s;
      }

      .honeycomb-cell:hover img {
        filter: grayscale(0%);
      }

      /* TITLE */
      .honeycomb-cell_title {
        position: absolute;
        width: 100%;
        top: 50%;
        transform: translateY(-50%);
        color: #fff;
        font-size: 1.2rem;
        font-weight: 700;
        text-transform: uppercase;
        transition: 0.3s;
      }

      .honeycomb-cell:hover .honeycomb-cell_title {
        opacity: 0;
      }
    </style>
  </head>
